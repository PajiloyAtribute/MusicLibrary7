@model List<MusicDatabase.Models.Song>

@{
    ViewData["Title"] = "Home";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Latest songs</h1>
    <div>
        <a class="btn btn-outline-primary me-2" asp-controller="Albums" asp-action="Index">Albums</a>
        <a class="btn btn-outline-primary me-2" asp-controller="Songs" asp-action="Index">Songs</a>
        <a class="btn btn-outline-primary" asp-controller="Artists" asp-action="Index">Artists</a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var s in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@s.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@s.Album?.Title</h6>
                        <p class="card-text">Duration: @TimeSpan.FromSeconds(s.DurationSeconds).ToString("mm\\:ss")</p>
                        <a asp-controller="Songs" asp-action="Details" asp-route-id="@s.SongId" class="btn btn-sm btn-primary">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Songs" asp-action="Edit" asp-route-id="@s.SongId" class="btn btn-sm btn-warning ms-2">Edit</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No songs yet.</p>
}
