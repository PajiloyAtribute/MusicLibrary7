@model List<MusicDatabase.Models.Song>

@{
    ViewData["Title"] = "Songs";
}

<style>
    .songs-header {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: #333;
        padding: 2rem 1.5rem;
        border-radius: 1rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 32px rgba(250, 112, 154, 0.3);
    }

    .songs-header h1 {
        margin: 0;
        font-weight: 700;
        font-size: 2.5rem;
    }

    .songs-header p {
        margin: 0.5rem 0 0 0;
        opacity: 0.9;
        font-size: 1.05rem;
    }
</style>

<div class="songs-header">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1>Songs</h1>
            <p>Browse our music tracks</p>
        </div>
        <div class="text-end" style="min-width: 200px;">
            <a class="btn btn-dark me-2" asp-controller="Home" asp-action="Index" style="font-weight: 600;">Home</a>
            <a class="btn btn-dark me-2" asp-controller="Albums" asp-action="Index" style="font-weight: 600;">Albums</a>
            <a class="btn btn-dark" asp-controller="Artists" asp-action="Index" style="font-weight: 600;">Artists</a>
            @if (User.IsInRole("Admin"))
            {
                <br/>
                <a class="btn btn-info mt-2" asp-action="Create" style="font-weight: 600;">+ Create Song</a>
            }
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="entity-list">
        <div class="entity-grid">
            @foreach(var s in Model)
            {
                <div class="entity-card">
                    <div class="thumb">
                        @if (!string.IsNullOrEmpty(s.Album?.Artist?.PhotoFileName))
                        {
                            <img src="~/images/artists/@s.Album.Artist.PhotoFileName" alt="@s.Title" />
                        }
                        else
                        {
                            <img src="~/images/placeholder-song.png" alt="@s.Title" />
                        }
                    </div>
                    <div class="meta">
                        <h5>@s.Title</h5>
                        <div class="text-muted">@s.Album?.Title</div>
                        @if (!string.IsNullOrEmpty(s.Album?.Artist?.Name))
                        {
                            <div class="text-muted small" style="margin-top: 0.2rem;">
                                @s.Album.Artist.Name
                            </div>
                        }
                        <div class="mt-1" style="margin-top: 0.5rem;">
                            Duration: <strong>@TimeSpan.FromSeconds(s.DurationSeconds).ToString("mm\\:ss")</strong>
                        </div>
                    </div>
                    <div class="actions">
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@s.SongId">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@s.SongId">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@s.SongId">Delete</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="home-empty" style="padding: 4rem 2rem; background: white; border-radius: 1rem; border: 2px dashed #dee2e6;">
        <h4 style="color: #6c757d;">No songs found.</h4>
        <p style="color: #adb5bd; margin-top: 0.5rem;">Create your music collection now!</p>
    </div>
}
