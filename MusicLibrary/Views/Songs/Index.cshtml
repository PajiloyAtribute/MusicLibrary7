@model List<MusicDatabase.Models.Song>

@{
    ViewData["Title"] = "Songs";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Songs</h1>
    <div>
        <a class="btn btn-outline-primary me-2" asp-controller="Home" asp-action="Index">Home</a>
        <a class="btn btn-outline-primary me-2" asp-controller="Albums" asp-action="Index">Albums</a>
        <a class="btn btn-outline-primary me-2" asp-controller="Artists" asp-action="Index">Artists</a>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary" asp-action="Create">Create Song</a>
        }
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="entity-list">
        <div class="entity-grid">
            @foreach(var s in Model)
            {
                <div class="entity-card">
                    <div class="thumb">
                        @if (!string.IsNullOrEmpty(s.Album?.Artist?.PhotoFileName))
                        {
                            <img src="~/images/artists/@s.Album.Artist.PhotoFileName" alt="@s.Title" />
                        }
                        else
                        {
                            <img src="~/images/placeholder-song.png" alt="@s.Title" />
                        }
                    </div>
                    <div class="meta">
                        <h5 class="mb-1">@s.Title</h5>
                        <div class="text-muted">@s.Album?.Title</div>
                        <div class="mt-1">Duration: @TimeSpan.FromSeconds(s.DurationSeconds).ToString("mm\\:ss")</div>
                    </div>
                    <div class="actions">
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@s.SongId">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@s.SongId">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@s.SongId">Delete</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="home-empty">No songs found.</div>
}
