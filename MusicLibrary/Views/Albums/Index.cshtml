@model List<MusicDatabase.Models.Album>

@{
    ViewData["Title"] = "Albums";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Albums</h1>
    <div>
        <a class="btn btn-outline-primary me-2" asp-controller="Home" asp-action="Index">Home</a>
        <a class="btn btn-outline-primary me-2" asp-controller="Artists" asp-action="Index">Artists</a>
        <a class="btn btn-outline-primary me-2" asp-controller="Songs" asp-action="Index">Songs</a>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary" asp-action="Create">Create Album</a>
        }
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="entity-list">
        <div class="entity-grid">
            @foreach(var a in Model)
            {
                <div class="entity-card">
                    <div class="thumb">
                        @if (!string.IsNullOrEmpty(a.Artist?.PhotoFileName))
                        {
                            <img src="~/images/artists/@a.Artist.PhotoFileName" alt="@a.Title" />
                        }
                        else
                        {
                            <img src="~/images/placeholder-album.png" alt="@a.Title" />
                        }
                    </div>
                    <div class="meta">
                        <h5 class="mb-1">@a.Title</h5>
                        <div class="text-muted">@a.Artist?.Name</div>
                        <div class="mt-1"><span class="badge-genre">@a.Genre</span></div>
                    </div>
                    <div class="actions">
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@a.AlbumId">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@a.AlbumId">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@a.AlbumId">Delete</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="home-empty">No albums found.</div>
}
