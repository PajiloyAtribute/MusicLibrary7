@model List<MusicDatabase.Models.Album>

@{
    ViewData["Title"] = "Albums";
}

<style>
    .albums-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem 1.5rem;
        border-radius: 1rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 32px rgba(102, 126, 234, 0.3);
    }

    .albums-header h1 {
        margin: 0;
        font-weight: 700;
        font-size: 2.5rem;
    }

    .albums-header p {
        margin: 0.5rem 0 0 0;
        opacity: 0.95;
        font-size: 1.05rem;
    }
</style>

<div class="albums-header">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1>Albums</h1>
            <p>Explore our music collection</p>
        </div>
        <div class="text-end" style="min-width: 200px;">
            <a class="btn btn-light me-2" asp-controller="Home" asp-action="Index" style="font-weight: 600;">Home</a>
            <a class="btn btn-light me-2" asp-controller="Artists" asp-action="Index" style="font-weight: 600;">Artists</a>
            <a class="btn btn-light" asp-controller="Songs" asp-action="Index" style="font-weight: 600;">Songs</a>
            @if (User.IsInRole("Admin"))
            {
                <br/>
                <a class="btn btn-warning mt-2" asp-action="Create" style="font-weight: 600;">+ Create Album</a>
            }
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="entity-list">
        <div class="entity-grid">
            @foreach(var a in Model)
            {
                <div class="entity-card">
                    <div class="thumb">
                        @if (!string.IsNullOrEmpty(a.Artist?.PhotoFileName))
                        {
                            <img src="~/images/artists/@a.Artist.PhotoFileName" alt="@a.Title" />
                        }
                        else
                        {
                            <img src="~/images/placeholder-album.png" alt="@a.Title" />
                        }
                    </div>
                    <div class="meta">
                        <h5>@a.Title</h5>
                        <div class="text-muted">@a.Artist?.Name</div>
                        @if (!string.IsNullOrEmpty(a.Genre))
                        {
                            <div class="mt-1" style="margin-top: 0.5rem;">
                                <span class="badge-genre">@a.Genre</span>
                            </div>
                        }
                        @if (a.ReleaseDate != default)
                        {
                            <div class="text-muted small" style="margin-top: 0.3rem;">
                                Released: @a.ReleaseDate.Year
                            </div>
                        }
                    </div>
                    <div class="actions">
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@a.AlbumId">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@a.AlbumId">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@a.AlbumId">Delete</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="home-empty" style="padding: 4rem 2rem; background: white; border-radius: 1rem; border: 2px dashed #dee2e6;">
        <h4 style="color: #6c757d;">No albums found.</h4>
        <p style="color: #adb5bd; margin-top: 0.5rem;">Start by adding a new album!</p>
    </div>
}
