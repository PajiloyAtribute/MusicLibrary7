@model MusicDatabase.Models.Artist

@{
    ViewData["Title"] = "Delete Artist";
}

<h1>Delete Artist</h1>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ArtistId" />
    <button class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
</form>
