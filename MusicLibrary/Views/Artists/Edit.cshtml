@model MusicDatabase.Models.Artist

@{
    ViewData["Title"] = "Edit Artist";
}

<h1>Edit Artist</h1>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="ArtistId" />
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Country</label>
        <input asp-for="Country" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Birth Date</label>
        <input asp-for="BirthDate" class="form-control" type="date" />
    </div>
    <div class="mb-3">
        <label class="form-label">Photo</label>
        <input type="file" name="photo" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.PhotoFileName))
        {
            <img src="~/images/artists/@Model.PhotoFileName" style="max-width:150px;max-height:150px" />
        }
    </div>
    <button class="btn btn-primary">Save</button>
</form>
